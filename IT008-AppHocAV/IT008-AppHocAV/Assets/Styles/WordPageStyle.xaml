        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="Foreground" Value="#1d2a57"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Margin" Value="0 0 20 0"></Setter>
        
