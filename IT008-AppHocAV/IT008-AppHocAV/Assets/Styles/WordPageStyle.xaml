<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBox" x:Key="ContentTextBlock">
        <Setter Property="Padding" Value="0 0 50 0"></Setter>
        <Setter Property="Width" Value="{Binding ElementName=Container,Path=ActualWidth}"> </Setter>
        <Setter Property="TextWrapping" Value="Wrap"> </Setter>
        <Setter Property="IsReadOnly" Value="True"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="Margin" Value="0 0 0 10"></Setter>
    </Style>
    
    
    <Style TargetType="Button" x:Key="SyAntonymButton">
