    <StackPanel>

        <!-- Header -->
        <Grid Height="60" Margin="20 10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" FontWeight="Medium" FontSize="30" VerticalAlignment="Center">Flash Card</Label>

            <!-- Search, Filter and Create new Flashcard Button -->
            <StackPanel  Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                <Canvas Height="40" Width="200"  Margin="0 0 10 0">

                    <TextBox x:Name="SearchEssayTextBox"
                                     Style="{DynamicResource SearchTextBoxStyle}"
                                     Visibility="Collapsed"  />
                    <Label x:Name="TextBlockPlaceHolder"
                                   Visibility="Hidden"
                                   Margin="0 4 0 0 "
                                   Canvas.Left="12"
                                   IsHitTestVisible="False" 
                                   Content="Enter title..."
                                   VerticalAlignment="Center"
                                   Foreground="DarkGray"
                                   FontSize="16"/>

                    <Button x:Name="SearchButton"
                                    Canvas.Right="0" Width="40" Height="40"
                                    Background="#96B639"
                                    Style="{DynamicResource RoundedButtonStyle }"
                                  
                                    >
                        <Image Source="../../Assets/Icon/SearchIcon.png" Width="24"></Image>
                    </Button>
                </Canvas>

                <Button x:Name="SortButton" Width="40" Height="40" Background="#96B639" Margin="0 0 10 0"
                            Style="{DynamicResource RoundedButtonStyle}" >
                    
                    <Image Source="../../Assets/Icon/FilterIcon.png" Width="24"></Image>
                </Button>

                <Button Width="150" Height="40" Background="#55AF6E"
                            Style="{DynamicResource RoundedButtonStyle}"
                            Click="NewFlashCardButton_OnClick">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../../Assets/Icon/AddIcon1.png" Width="24"></Image>
                        <Label FontSize="16" VerticalAlignment="Center">New FlashCard</Label>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!-- End search, Filter and Create new Essay Button -->

        </Grid>
        <!-- End Header -->

        <Border Style="{DynamicResource Splitter}" Margin="0 -20 0 0"></Border>
        <!--Show list of essays -->
        <ListView x:Name="lvListFlash" HorizontalAlignment="Left" 
                           Margin="0 20"
                           Width="auto" Height="400"
                           Background="Transparent"
                           BorderThickness="0"
                           d:ItemsSource="{d:SampleData ItemCount=4}"
                           >
            <ListView.Template>
                <ControlTemplate>
                    <ItemsPresenter />
                </ControlTemplate>
            </ListView.Template>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"  />
                                            
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate >
                <!-- Defines Items Template -->
                <DataTemplate>
                    <Button Name="ItemFlashCard" Click="ItemFlashCard_Click" 
                            Height="140" Width="240"
                            Background="#F4EEEE"
                            Style="{DynamicResource RoundedButtonStyle}"
                            Margin="20 10 10 10">


                       


                        <Grid Width="250" Height="125 " Background="Transparent" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Grid.Clip>
                                <RectangleGeometry Rect="0,0,255,130" RadiusX="10" RadiusY="10"/>
                            </Grid.Clip>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                             <Grid Grid.Row="0"    >
                                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right"  >
                                    <Label  Margin="0 0 2 0" FontSize="11" >Last modified:</Label>
                                    <Label   Margin="0 0 25 0" FontSize="11" Content="{Binding UpdatedAt}"></Label>
                                    <Button HorizontalAlignment="Right"   Name ="EditFlashcard"  Margin="5 0 0 0" Background="{x:Null}"  Click="EditFlashcard_Click">
                                        <Button.Clip>
                                            <RectangleGeometry Rect="1.7,2,27,32" RadiusX="10" RadiusY="10"/>
                                        </Button.Clip>
                                        <Image Source="/Assets/Icon/EditIcon.png" Width="26" Height="26" />
                                    </Button>
                                    <Button HorizontalAlignment="Right" Margin="5 0 5 0" Background="{x:Null}"  >
                                        <Button.Clip>
                                            <RectangleGeometry Rect="1.2,2,31,31" RadiusX="10" RadiusY="10"/>
                                        </Button.Clip>
                                        <Image Source="/Assets/Icon/DeleteIcon.png" Width="30" Height="30" />

                                    </Button>
                                    
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Label HorizontalAlignment="Center"  Margin="0 10 0 0 "  Content="{Binding Title}" FontSize="20">

                                </Label>
                            </Grid>
                        </Grid>
                    </Button>
                </DataTemplate>
                <!--End defines Items Template -->
            </ListView.ItemTemplate>

        </ListView>
        <!--End show list of essays -->


    </StackPanel>


