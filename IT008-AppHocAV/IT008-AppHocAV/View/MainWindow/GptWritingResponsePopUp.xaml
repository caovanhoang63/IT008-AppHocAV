<Page x:Class="IT008_AppHocAV.View.MainWindow.GptWritingResponsePopUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IT008_AppHocAV.View.MainWindow"
      mc:Ignorable="d"
      Title="GptWritingResponsePopUp" Height="auto" Width="auto"
      Margin="10">
    
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Assets/Styles/BaseStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="../../Assets/Styles/ScrollBarStyle.xaml"></ResourceDictionary>
                <ResourceDictionary Source="../../Assets/Styles/GptWritingPopUpStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    
    <Grid>
        <ScrollViewer>
            
            <StackPanel>
                
                <StackPanel x:Name="IdeasContainer">
                    <TextBlock>Ideas: </TextBlock>
                    <TextBox x:Name="Ideas" />
                </StackPanel>

                <StackPanel x:Name="OutlineContainer">
                    <TextBlock>Outline: </TextBlock>
                    <TextBox x:Name="Outline" />
                </StackPanel>

                <StackPanel x:Name="LexicalContainer">
                    <TextBlock>Lexical: </TextBlock>
                    <TextBox x:Name="Lexical" />
                </StackPanel>

                <StackPanel x:Name="EnhanceContainer">
                    <TextBlock>Preview and Enhance: </TextBlock>
                    <TextBox x:Name="Enhance" />
                </StackPanel>

                
            </StackPanel>
            
        </ScrollViewer>
    </Grid>
    
    
</Page>
